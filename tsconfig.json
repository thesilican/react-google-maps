    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./typings",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
